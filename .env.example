# Environment Variables for FAU Erdal Barnehage

# Database Connection (Neon PostgreSQL)
DATABASE_URL=your_neon_postgresql_connection_string_here

# Session Security
SESSION_SECRET=your_secure_random_session_secret_here

# Email Service (Gmail)
GMAIL_USER=your_gmail_email_address_here
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# File Upload Service (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Admin Credentials (for init-admin.ts script)
ADMIN_EMAIL=your_admin_email_here
ADMIN_PASSWORD=your_secure_admin_password_here

# Error Tracking and Monitoring (Sentry)
# Backend (API) Sentry DSN
SENTRY_DSN=your_sentry_dsn_here
# Frontend (Vite) Sentry DSN - can be the same DSN
VITE_SENTRY_DSN=your_sentry_dsn_here

# Application Settings
NODE_ENV=production
PORT=5000