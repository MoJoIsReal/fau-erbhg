{
  "version": 2,
  "builds": [
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "functions": {
    "api/secure-*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/secure-status",
      "dest": "/api/secure-status.js"
    },
    {
      "src": "/api/secure-init-db",
      "dest": "/api/init-secure-db.js"
    },
    {
      "src": "/api/secure-events",
      "dest": "/api/secure-events.js"
    },
    {
      "src": "/api/secure-auth",
      "dest": "/api/secure-auth.js"
    },
    {
      "src": "/api/secure-registrations",
      "dest": "/api/secure-registrations.js"
    },
    {
      "src": "/api/secure-documents",
      "dest": "/api/secure-documents.js"
    },
    {
      "src": "/api/secure-contact",
      "dest": "/api/secure-contact.js"
    },
    {
      "src": "/api/secure-upload",
      "dest": "/api/secure-upload.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}